{
  "name": "gnome-shell-extension-headsetcontrol-simple",
  "version": "1.0.0",
  "private": true,
  "description": "Simple GNOME shell extension for headset control.",
  "main": "extension.js",
  "scripts": {
    "fix": "npm run fix:js && npm run fix:xml",
    "fix:js": "prettier --write .",
    "fix:xml": "prettier --plugin=@prettier/plugin-xml --write '**/*.xml'",
    "lint": "npm run lint:js && npm run lint:xml",
    "lint:js": "prettier --check .",
    "lint:xml": "prettier --plugin=@prettier/plugin-xml --check '**/*.xml'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfinelli/gnome-shell-extension-headsetcontrol-simple.git"
  },
  "keywords": [
    "gnome",
    "headsetcontrol"
  ],
  "author": "Mario Finelli",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/mfinelli/gnome-shell-extension-headsetcontrol-simple/issues"
  },
  "homepage": "https://github.com/mfinelli/gnome-shell-extension-headsetcontrol-simple#readme",
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "prettier": "^3.3.2"
  }
}
